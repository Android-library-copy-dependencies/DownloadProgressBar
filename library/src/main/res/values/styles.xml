<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <declare-styleable name="DownloadProgressView">
        <attr name="dpb_circleRadius" format="dimension"/>
        <attr name="dpb_strokeWidth" format="dimension"/>
        <attr name="dpb_lineWidth" format="dimension"/>
        <attr name="dpb_progressDuration" format="integer"/>
        <attr name="dpb_resultDuration" format="integer"/>
        <attr name="dpb_progressBackgroundColor" format="color"/>
        <attr name="dpb_drawingColor" format="color"/>
        <attr name="dpb_progressColor" format="color"/>
        <attr name="dpb_circleBackgroundColor" format="color"/>
        <attr name="dpb_overshootValue" format="float"/>
    </declare-styleable>

</resources>
